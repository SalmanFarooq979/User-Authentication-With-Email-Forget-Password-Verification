@model Response
@{
    ViewData["Title"] = "Forget Password Confirmation";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<div class="account-container">
    <div class="account-Box">
        <div class="col-6 offset-3" style="top:50%; right:25%">
            @if (Model.Message == "Your Password has benn Successfully Reset")
            {
                <div class="alert alert-success" role="alert">
                    @Model.Message , If you want to Login then Click Here
                    <a asp-action="Login" asp-controller="Account" class="btn btn-sm btn-primary">Login</a>
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    Your <strong>@Model.Message</strong> has been sent to Registered Email, Kinldy check your Email to reset Password
                </div>
            }
            <div class="d-grid">
                <a class="btn btn-warning" asp-action="Login" asp-controller="Account">Back</a>
            </div>
        </div>
    </div>
</div>
