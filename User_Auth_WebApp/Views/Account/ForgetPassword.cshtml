@model ForgetPasswordOrUsernameVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<div class="account-container row justify-content-center">
    <div class="account-Box col-5 mt-5 border border-4 p-4 rounded">
        <form method="post" asp-action="ForgetPassword" asp-controller="Account">
            <h3 class="text-center text-muted mb-2" style="font-size:20px">Forget Password</h3>
            <hr />
            <div class="mb-3">
                <label class="mb-2" asp-for="Email"></label><span class="text-danger">*</span>
                <input type="email" asp-for="Email" class="form-control" autocomplete="on" placeholder="Please enter your Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-6 d-grid">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-warning text-light">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}


